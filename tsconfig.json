{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "tsBuildInfoFile": "dist/tsconfig.build.tsbuildinfo",
  },
  "files": [
    "package.json"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
